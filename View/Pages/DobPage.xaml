<Page x:Class="RefreshSalon.View.Pages.DobPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RefreshSalon.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DobPage">

    <Grid>
        <Image Stretch="Fill" Source="/Resources/SK.png" />

        <StackPanel Margin="80 80 150 0">
            <TextBlock Margin="0 0 0 30" Text="Введите товар" FontSize="30"/>
            <TextBox x:Name="TovarTb" Width="250" HorizontalAlignment="Center" Height="40"/>

            <TextBlock Text="Выберите производителя товара" Margin="0 30 0 0" FontSize="30"/>
            <ComboBox x:Name="Cmb" Height="40" Margin="0 20 0 0"/>
            <Button x:Name="Ahd1Btn" Content="Добавить" Margin="0 40 20 0" FontSize="25" 
                    HorizontalAlignment="Right" Click="Ahd1Btn_Click"/>
        </StackPanel>
    </Grid>
</Page>
