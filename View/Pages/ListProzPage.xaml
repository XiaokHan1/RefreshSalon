<Page x:Class="RefreshSalon.View.Pages.ListProzPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RefreshSalon.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="769" d:DesignWidth="1034"
      Title="ListProzPage">

    <Grid>
        <Image Stretch="Fill" Source="/Resources/SK.png" />

        <StackPanel Margin="120 120 380 0">
            <TextBlock Margin="0 0 0 30" Text="Введите производителя" FontSize="35"/>
            <TextBox x:Name="ProzTb" Width="250" HorizontalAlignment="Center" Height="40"/>
            <Button x:Name="AhdBtn" Content="Добавить" Margin="0 40 20 0" FontSize="25" 
                    Click="AhdBtn_Click" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Page>
